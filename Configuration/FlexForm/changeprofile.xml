<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>


                    <settings.deleteAccountPage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of "[Users] Delete account" plugin, to display a "Delete account" box (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.deleteAccountPage>


                </el>
            </ROOT>
        </options>

        <inputfields>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Optional input fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.optionalFields>
                        <TCEforms>
                            <label>Show fields (optional)</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>SaschaEnde\Users\Flexform\Fields->changeprofile</itemsProcFunc>
                                <renderType>selectMultipleSideBySide</renderType>
                                <size>10</size>
                            </config>
                        </TCEforms>
                    </settings.optionalFields>

                    <settings.requiredFields>
                        <TCEforms>
                            <label>Required fields (optional)</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>SaschaEnde\Users\Flexform\Fields->changeprofile</itemsProcFunc>
                                <renderType>selectMultipleSideBySide</renderType>
                                <size>10</size>
                            </config>
                        </TCEforms>
                    </settings.requiredFields>


                    <settings.linkConditions>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to conditions page (required if field is set)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.linkConditions>


                    <settings.linkDataprotection>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to data protection page (required if field is set)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.linkDataprotection>



                </el>
            </ROOT>
        </inputfields>

    </sheets>
</T3DataStructure>
