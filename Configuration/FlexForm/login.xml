<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.allowEmailLogin>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Also allow login with email adress (recommended)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.allowEmailLogin>

                    <settings.updateLanguage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Update user language with every login (recommended)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.updateLanguage>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>

                    <settings.allowedUsergroups>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Usergroups that are allowed to login (leave empty, if all usergroups are allowed)</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>fe_groups</foreign_table>
                                <size>10</size>
                                <minitems>0</minitems>
                                <maxitems>9999</maxitems>
                            </config>
                        </TCEforms>
                    </settings.allowedUsergroups>

                    <settings.redirectSuccess>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Redirect link after success login</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.redirectSuccess>


                    <settings.redirectIfLogged>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Redirect to this page, if a user is already logged in (leave empty, if you want to display a status page)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.redirectIfLogged>


                </el>
            </ROOT>
        </options>

        <links>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Links</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>


                    <settings.forgotpassPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to page with "forgot pass" plugin at the bottom of the form (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.forgotpassPid>

                    <settings.registerPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to page with "registration" plugin at the bottom of the form (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.registerPid>


                </el>
            </ROOT>
        </links>

    </sheets>
</T3DataStructure>
