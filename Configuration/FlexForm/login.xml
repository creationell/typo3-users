<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.allowEmailLogin>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Also allow login with email adress</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.allowEmailLogin>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>

                    <settings.redirectSuccess>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Redirect after success login</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.redirectSuccess>


                </el>
            </ROOT>
        </options>

    </sheets>
</T3DataStructure>
