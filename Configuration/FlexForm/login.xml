<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.allowEmailLogin>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Also allow login with email adress (recommended)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.allowEmailLogin>

                    <settings.updateLanguage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Update user language with every login (recommended)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.updateLanguage>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data (required)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>

                    <settings.redirectSuccess>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Redirect link after success login (required)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.redirectSuccess>


                </el>
            </ROOT>
        </options>

        <links>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Links</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>


                    <settings.forgotpassPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to page with "forgot pass" plugin at the bottom of the form (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.forgotpassPid>

                    <settings.registerPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to page with "registration" plugin at the bottom of the form (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.registerPid>


                </el>
            </ROOT>
        </links>

    </sheets>
</T3DataStructure>
