<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>

                    <settings.userGroups>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Usergroup(s) for new users</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>fe_groups</foreign_table>
                                <size>10</size>
                                <minitems>1</minitems>
                                <maxitems>9999</maxitems>
                            </config>
                        </TCEforms>
                    </settings.userGroups>

                    <settings.login>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Automatically login after successful confirmation of the account (optional)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.login>

                    <settings.forgotpassPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to page with "forgot pass" plugin (used in one email, when email exists)</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.forgotpassPid>


                    <settings.successLink>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link after successfull confirmation via email (optional but recommended)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.successLink>

                    <settings.loginPid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to login Page at the bottom of the form (optional but recommended)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.loginPid>


                </el>
            </ROOT>
        </options>

        <inputfields>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Optional input fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.optionalFields>
                        <TCEforms>
                            <label>Show fields (optional)</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Conditions (AGB)</numIndex>
                                        <numIndex index="1">users_conditions</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Data protection (Datenschutz)</numIndex>
                                        <numIndex index="1">users_dataprotection</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Firstname</numIndex>
                                        <numIndex index="1">first_name</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">Lastname</numIndex>
                                        <numIndex index="1">last_name</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">Company</numIndex>
                                        <numIndex index="1">company</numIndex>
                                    </numIndex>
                                    <numIndex index="6" type="array">
                                        <numIndex index="0">Street</numIndex>
                                        <numIndex index="1">address</numIndex>
                                    </numIndex>
                                    <numIndex index="7" type="array">
                                        <numIndex index="0">Zip</numIndex>
                                        <numIndex index="1">zip</numIndex>
                                    </numIndex>
                                    <numIndex index="8" type="array">
                                        <numIndex index="0">City</numIndex>
                                        <numIndex index="1">city</numIndex>
                                    </numIndex>
                                    <numIndex index="9" type="array">
                                        <numIndex index="0">Phone</numIndex>
                                        <numIndex index="1">telephone</numIndex>
                                    </numIndex>
                                    <numIndex index="10" type="array">
                                        <numIndex index="0">Newsletter</numIndex>
                                        <numIndex index="1">users_newsletter</numIndex>
                                    </numIndex>
                                </items>
                                <size>10</size>
                            </config>
                        </TCEforms>
                    </settings.optionalFields>

                    <settings.requiredFields>
                        <TCEforms>
                            <label>Required fields (optional)</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Conditions (AGB)</numIndex>
                                        <numIndex index="1">users_conditions</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Data protection (Datenschutz)</numIndex>
                                        <numIndex index="1">users_dataprotection</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Firstname</numIndex>
                                        <numIndex index="1">first_name</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">Lastname</numIndex>
                                        <numIndex index="1">last_name</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">Company</numIndex>
                                        <numIndex index="1">company</numIndex>
                                    </numIndex>
                                    <numIndex index="6" type="array">
                                        <numIndex index="0">Street</numIndex>
                                        <numIndex index="1">address</numIndex>
                                    </numIndex>
                                    <numIndex index="7" type="array">
                                        <numIndex index="0">Zip</numIndex>
                                        <numIndex index="1">zip</numIndex>
                                    </numIndex>
                                    <numIndex index="8" type="array">
                                        <numIndex index="0">City</numIndex>
                                        <numIndex index="1">city</numIndex>
                                    </numIndex>
                                    <numIndex index="9" type="array">
                                        <numIndex index="0">Phone</numIndex>
                                        <numIndex index="1">telephone</numIndex>
                                    </numIndex>

                                    <numIndex index="10" type="array">
                                        <numIndex index="0">Newsletter</numIndex>
                                        <numIndex index="1">users_newsletter</numIndex>
                                    </numIndex>
                                </items>
                                <size>10</size>
                            </config>
                        </TCEforms>
                    </settings.requiredFields>


                    <settings.linkConditions>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to conditions page (required if field is set)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.linkConditions>


                    <settings.linkDataprotection>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to data protection page (required if field is set)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.linkDataprotection>



                </el>
            </ROOT>
        </inputfields>

        <email>
            <ROOT>
                <TCEforms>
                    <sheetTitle>E-Mail settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.senderEmail>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Sender email adress</label>
                            <config>
                                <required>1</required>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.senderEmail>

                    <settings.senderName>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Sender name</label>
                            <config>
                                <required>1</required>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.senderName>

                    <settings.subject>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Subject of the email</label>
                            <config>
                                <default>Please confirm the creation of your new user account</default>
                                <required>1</required>
                                <type>input</type>
                                <size>60</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.subject>


                </el>
            </ROOT>
        </email>

    </sheets>
</T3DataStructure>
