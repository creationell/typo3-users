<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.usersFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Location of users data</label>
                            <config>
                                <required>1</required>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.usersFolder>

                    <settings.login>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Automatically login after successful password change (optional)</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.login>


                    <settings.successLink>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link after successfull password change (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.successLink>


                </el>
            </ROOT>
        </options>
        <email>
            <ROOT>
                <TCEforms>
                    <sheetTitle>E-Mail settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.senderEmail>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Sender email adress</label>
                            <config>
                                <required>1</required>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.senderEmail>

                    <settings.senderName>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Sender name</label>
                            <config>
                                <required>1</required>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.senderName>

                    <settings.subject>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Subject of the email</label>
                            <config>
                                <required>1</required>
                                <type>input</type>
                                <size>60</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.subject>


                </el>
            </ROOT>
        </email>

    </sheets>
</T3DataStructure>
